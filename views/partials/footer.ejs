<script>
const url = window.location.href;
const lastPartIndex = url.lastIndexOf('/');
const lastPart = url.substring(lastPartIndex + 1);
const footBt = document.querySelectorAll('.footBt');
footBt.forEach(el =>{
   
if(el.classList.contains(`${lastPart}`)){
    el.classList.add('text-blf');
}
else{
    el.classList.remove('text-blf')

}
  
})


// Assume you have four buttons with IDs: button1, button2, button3, and button4



// pls Button click 
const plsBt = document.getElementById('plsBt');
// Clicking on Plus button 
plsBt.addEventListener('click', (event) => {
        event.preventDefault();
        if (event.target.closest('#plsBt')) {
            plusBoxIn();

        }
    });


    plsChat.addEventListener('click', (event) => {
        event.preventDefault();
        if (event.target.closest('#plsChat')) {
            plusBoxOut();
            uidInput();
        }
    });

    plsQuote.addEventListener('click',(event)=>{
        
        plusBoxOut();
        blurIn();
       quoteInput.classList.add('visible');
    });

    cut.addEventListener('click',(event)=>{
        plusBoxOut();
    });

    viewProfileBtn.addEventListener('click',(event)=>{
           const uid = uidReturn();
           if(uid){
           return window.location.href = `users/${uid}`;
           }
            });


</script>