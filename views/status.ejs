<main class=" fixed top-0 left-0 bottom-32 right-0 flex items-center justify-center">
    <div class="flex flex-col items-center  justify-center gap-6">
        <div class="flex justify-center self-center items-center"> <img src="/img/<%= icon %>" alt="" class="w-20 h-20 rounded-full">
     </div>
         <div  class="flex flex-col justify-center items-center px-6">
             <h1 id="statusHeading" class="text-xl text-black font-[600]"><%= status %></h1>
     <p  id="statusMessage" class="text-blt text-sm text-center"><%= message %></p>
         </div>
         <div class="flex justify-between items-center gap-4">
             <a href="<%= href %>" id="statusRightBtn" class="<%= bg %>  text-blm px-6 py-2 rounded-lg border border-blb text-sm"><%= right %></a>
         </div>
     </div>
  
</main>
